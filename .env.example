# ==========================================
# FRONTEND CONFIGURATION - EXAMPLE FILE
# ==========================================
# This file shows the structure of environment variables
# Angular uses environment.ts and environment.prod.ts for configuration

# ==========================================
# BACKEND API CONFIGURATION
# ==========================================
# Development: Point to local backend
# VITE_API_URL=http://localhost:3000

# Production: Point to production backend
# VITE_API_URL=https://psicoterapia-backend.onrender.com

# ==========================================
# NOTES FOR ANGULAR
# ==========================================
# Angular doesn't use .env files by default
# Instead, configure your API URLs in:
# - src/app/environments/environment.ts (development)
# - src/app/environments/environment.prod.ts (production)

# Example environment.ts:
# export const environment = {
#   production: false,
#   apiUrl: 'http://localhost:3000'
# };

# Example environment.prod.ts:
# export const environment = {
#   production: true,
#   apiUrl: 'https://psicoterapia-backend.onrender.com'
# };

# The build process automatically switches between them:
# - ng serve → uses environment.ts
# - ng build --configuration=production → uses environment.prod.ts
